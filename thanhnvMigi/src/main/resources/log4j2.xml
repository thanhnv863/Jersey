<Configuration status="debug">
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </Console>
        <RollingFile name="file" fileName="C:/Users/Admin/Desktop/Jersey/thanhnvMigi/app.log" filePattern="C:/Users/Admin/Desktop/Jersey/thanhnvMigi/app-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
